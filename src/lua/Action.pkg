$#include <boost/variant.hpp>
$#include "Action.h"

$pfile "Types.pkg"

namespace Rangers
{
class Action
{
public:
    enum Type {BUTTON_CLICKED, KEY_PRESSED};
    typedef boost::variant<std::wstring, Rect, SDL_keysym> Argument;

    Action(Rangers::Widget *source, Type type, const Argument& argument);

    Rangers::Widget* source() const;
    Type type() const;
    Argument argument() const;
};
}